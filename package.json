{
  "name": "hono-boilerplate",
  "description": "Hono Boilerplate",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "start:local": "yarn env:copy:local && yarn build:watch --onSuccess \"node ./dist/index.js\"",
    "start:qa": "yarn env:copy:qa && yarn build:watch --onSuccess \"node ./dist/index.js\"",
    "start:staging": "yarn env:copy:staging && yarn build:watch --onSuccess \"node ./dist/index.js\"",
    "start:production": "yarn env:copy:production && yarn build:watch --onSuccess \"node ./dist/index.js\"",
    "build": "tsup",
    "build:check": "tsc --noEmit",
    "build:watch": "tsup --watch",
    "test": "jest --coverage --detectOpenHandles --passWithNoTests",
    "test:watch": "jest --coverage --watch --detectOpenHandles",
    "env:copy:local": "cp .env.local .env",
    "env:copy:test": "cp .env.test .env",
    "env:copy:qa": "cp .env.qa .env",
    "env:copy:staging": "cp .env.staging .env",
    "env:copy:production": "cp .env.production .env",
    "lint": "yarn eslint .",
    "lint:fix": "yarn eslint . --fix",
    "format": "yarn prettier --check .",
    "format:fix": "yarn prettier --write .",
    "migrate:status": "yarn migrate-mongo status",
    "migrate:up": "yarn migrate-mongo up",
    "migrate:down": "yarn migrate-mongo down",
    "migrate:create": "echo 'Enter description using dashes(-)' && read description && npx migrate-mongo create $description",
    "postinstall": "husky install",
    "release:patch": "yarn version --patch && yarn extract",
    "release:minor": "yarn version --minor && yarn extract",
    "release:major": "yarn version --major && yarn extract",
    "kill": "echo 'Enter port number' && read port && kill $(lsof -t -i:$port)",
    "extract": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts && yarn format:fix && git add . && git commit -m 'build: version update' && git push --tags",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "author": "Unwir PVT LTD",
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@hono/zod-validator": "^0.2.2",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "hono": "^4.2.9",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@hono/eslint-config": "^0.0.6",
    "@types/lodash": "^4",
    "@types/node": "^20.11.17",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "migrate-mongo": "^11.0.0",
    "pinst": "^3.0.0",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=4.3.0"
  },
  "packageManager": "yarn@4.3.0",
  "tsup": {
    "clean": true,
    "format": "esm",
    "target": "node20",
    "outDir": "dist",
    "minify": true,
    "treeShake": true,
    "entry": [
      "src/index.ts"
    ]
  }
}
